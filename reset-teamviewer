#!/bin/bash
#
# reset-teamviewer - Reset TeamViewer configuration and MAC addresses
#
# This script resets TeamViewer by removing configuration files and
# changing MAC addresses before restarting TeamViewer.

show_help() {
    cat << EOF
reset-teamviewer - Reset TeamViewer configuration and MAC addresses

This script resets TeamViewer by removing configuration files and
changing MAC addresses before restarting TeamViewer.
It changes MAC addresses to random values, starts TeamViewer, then
resets MAC addresses back to permanent values.

Usage: sudo $(basename "$0")

Dependencies:
  - TeamViewer service (teamviewerd.service)
  - macchanger (to change MAC addresses)
  - NetworkManager

Configuration:
  - Affects network interfaces: wlp6s0, enp7s0

Examples:
  sudo $(basename "$0")

WARNING: This script requires root privileges and will temporarily
         stop network services and change MAC addresses.

EOF
}

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    show_help
    exit 0
fi

# Check for root privileges before stopping services and changing system settings
if [[ $EUID -ne 0 ]]; then
  echo "This script requires root privileges to modify system services and MAC addresses."
  exit 1
fi

sudo systemctl stop teamviewerd.service
rm -rf .config/teamviewer
sudo rm -rf /etc/teamviewer
sudo rm  /opt/teamviewer/config

sudo systemctl stop NetworkManager
sudo macchanger -r wlp6s0
sudo macchanger -r enp7s0
sudo systemctl start NetworkManager

sudo systemctl start teamviewerd.service

#/etc/NetworkManager/conf.d/macchange.conf
####################
#[device]
#wifi.scan-rand-mac-address=no
#[connection]
#ethernet.cloned-mac-address=preserve
#wifi.cloned-mac-address=preserve
#####################

teamviewer

sudo systemctl stop NetworkManager
sudo macchanger -p wlp6s0
sudo macchanger -p enp7s0
sudo systemctl start NetworkManager
