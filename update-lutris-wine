#!/bin/bash
#
# update-lutris-wine - Update Lutris Wine version in game configurations
#
# This script updates Lutris game configurations to use a specific Wine version.

show_help() {
    cat << EOF
update-lutris-wine - Update Lutris Wine version in game configurations

This script updates Lutris game configurations to use a specific Wine version.
It replaces any GE-Proton version with GE-Proton8-5 in YAML configuration files.

Usage: $(basename "$0")

Configuration:
  - Target: /home/ochi/.config/lutris/games/*.yml
  - Old pattern: lutris-GE-Proton.*.-.*.-x86_64
  - New pattern: lutris-GE-Proton8-5-x86_64

Examples:
  $(basename "$0")

WARNING: This script modifies user configuration files. A backup is not created.

EOF
}

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    show_help
    exit 0
fi

sed -i  's/lutris-GE-Proton.*.-.*.-x86_64/lutris-GE-Proton8-5-x86_64/g' /home/ochi/.config/lutris/games/*.yml
