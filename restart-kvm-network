#!/bin/bash
#
# restart-kvm-network - Restart KVM network and reattach interfaces to VMs
#
# This script restarts the default KVM network and reattaches network interfaces
# to all running VMs to refresh network connectivity.

show_help() {
    cat << EOF
restart-kvm-network - Restart KVM network and reattach interfaces to VMs

This script restarts the default KVM network and reattaches network interfaces
to all running VMs to refresh network connectivity.

Usage: sudo $(basename "$0")

Dependencies:
  - libvirt (virsh command)
  - Running VMs on the default network

Configuration:
  - Network name: default
  - Network hook: /etc/libvirt/hooks/qemu

Examples:
  sudo $(basename "$0")

WARNING: This script requires root privileges and will temporarily disconnect
         network interfaces from all running VMs.

EOF
}

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    show_help
    exit 0
fi

# Check for root privileges before managing VMs
if [[ $EUID -ne 0 ]]; then
  echo "This script requires root privileges to manage KVM virtual machines."
  exit 1
fi

set -e
set -u

NET_NAME=default
NET_HOOK=/etc/libvirt/hooks/qemu

virsh net-stop $NET_NAME
virsh net-start $NET_NAME

VMS=$( virsh list | tail -n +3 | head -n -1 | awk '{ print $2; }' )

for m in $VMS ; do

    echo "$m"
    MAC_ADDR=$(virsh domiflist "$m" |grep -o -E "([0-9a-f]{2}:){5}([0-9a-f]{2})")
    NET_MODEL=$(virsh domiflist "$m" | tail -n +3 | head -n -1 | awk '{ print $4; }')

    set +e
    virsh detach-interface "$m" network --mac "$MAC_ADDR" && sleep 3
    virsh attach-interface "$m" network $NET_NAME --mac "$MAC_ADDR" --model "$NET_MODEL"
    set -e

    $NET_HOOK "$m" stopped && sleep 3
    $NET_HOOK "$m" start

done
